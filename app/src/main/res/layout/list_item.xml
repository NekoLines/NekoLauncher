<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/icon_bg"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp"
        android:alpha="1"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/icon_bga"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp"
        android:alpha="1"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bltowi" />

    <ImageView

        android:id="@+id/item_app_icon"

        android:layout_width="50dp"

        android:layout_height="50dp"

        android:layout_alignParentLeft="true"

        android:layout_centerVertical="true"

        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp" />

    <TextView

        android:id="@+id/item_app_label"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/item_app_icon"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/item_app_icon"
        android:paddingLeft="5dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView

        android:id="@+id/item_app_name"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_below="@+id/item_app_label"

        android:layout_toRightOf="@+id/item_app_icon"

        android:paddingLeft="5dp"

        android:paddingTop="2dp"
        android:textColor="@android:color/background_light" />

</RelativeLayout>